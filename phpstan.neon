parameters:
    level: 6
    paths:
        - src
    memoryLimitFile: 2G
    ignoreErrors:
        # Generic types in PromiseInterface (GuzzleHttp doesn't support generics)
        - '#PHPDoc tag @return contains generic type#'
        # Callable|null type hints (will fix gradually)
        - '#PHPDoc tag @param for parameter \$callback with type \(callable\)\|null#'
        # Redis/Memcached return types (extension-specific)
        - '#Comparison operation.*between.*Redis.*results in an error#'
        # Stream methods return generators, not direct return statements
        - '#Method.*::streamText\(\) should return.*but return statement is missing#'
        # ConfigValidator accessing dynamic properties (will fix)
        - '#Access to an undefined property.*ProviderConfig::#'
        # Unused variables in closures (minor)
        - '#Anonymous function has an unused use#'
        # Private property access (will review)
        - '#Access to private property.*Conversation::\$messages#'

